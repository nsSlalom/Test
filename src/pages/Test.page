<apex:page >
    <apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" />

    <html>
        <head>
            
            <script>
            j$ = jQuery.noConflict();
			j$(document).ready(function() {
            j$(".p").click(function(){
                j$(".p").css("background-color", "yellow");
                });			
            j$(".a").click(function(){
                j$("h1").toggle();
                });
  			 });            	                 
            </script>
          </head>  
          <body>
                         
               <div class="p">
                   <h1>Hello</h1>             			
                </div>
              <div class="a">
                  <h2>
                      Wow
              	  </h2>
              </div>
           </body>   
       
    </html>


</apex:page>